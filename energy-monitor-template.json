          "thresholds": {"steps": [{"color": "green", "value": null}]},
          "unit": "kwatth"
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "device_name"},
            "properties": [{"id": "custom.width", "value": 300}]
          }
