      "options": {
        "showHeader": true,
        "sortBy": [{"desc": true, "displayName": "integral"}]
      },
      "targets": [
        {
          "query": "SELECT INTEGRAL(\"usage\") / 3600000 FROM \"energy_usage\" WHERE $timeFilter GROUP BY \"device_name\"",
          "rawQuery": true,
          "refId": "A"
        }
      ],
      "title": "Energy Consumption by Device",
      "transformations": [
        {"id": "sortBy", "options": {"fields": {}, "sort": [{"field": "integral", "desc": true}]}}
